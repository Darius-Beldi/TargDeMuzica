@{
}



@foreach (var product in ViewBag.Products)
{
    <div class="card">

        <div class="card-body">

            <h3 class="card-title alert-success py-3 px-3 rounded-2">@product.ProductName</h3>

            <div class="card-text">@product.ProductDescription</div>
        </div>

    </div>

    <br />
    <br />
}