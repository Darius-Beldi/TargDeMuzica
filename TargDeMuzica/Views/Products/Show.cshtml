@model TargDeMuzica.Models.Product


<h1>@Model.ProductName</h1>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ProductImageLocation" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Description:</dt>
            <dd class="col-sm-8">@Model.ProductDescription</dd>

            <dt class="col-sm-4">Price:</dt>
            <dd class="col-sm-8">@Model.ProductPrice.ToString("C")</dd>

            <dt class="col-sm-4">Stock:</dt>
            <dd class="col-sm-8">@Model.ProductStock</dd>

            <dt class="col-sm-4">Score:</dt>
            <dd class="col-sm-8">@(Model.ProductScore.HasValue ? Model.ProductScore.Value.ToString("F1") : "Not Rated")</dd>

            <dt class="col-sm-4">Genres:</dt>
            <dd class="col-sm-8">@(Model.ProductGenres != null ? string.Join(", ", Model.ProductGenres) : "None")</dd>

            <dt class="col-sm-4">Music Support:</dt>
            <dd class="col-sm-8">@(Model.MusicSuport != null ? string.Join(", ", Model.MusicSuport.Select(ms => ms.MusicSuportName)) : "None")</dd>

            <dt class="col-sm-4">Artist:</dt>
            <dd class="col-sm-8">@(Model.Artist != null ? Model.Artist.ArtistName : "Unknown")</dd>
        </dl>

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>



<div class="row mt-4">
    <div class="col-12">
        <h2>Reviews</h2>
        
<div class="row mt-4">
    <div class="col-12">
        <h2>Reviews</h2>


                <a class="btn btn-success" asp-action="New" asp-controller="Reviews">Adauga review</a>


        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            foreach (var review in Model.Reviews.OrderByDescending(r => r.ReviewDate))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title">
                                @for (int i = 0; i < review.StarRating; i++)
                                {
                                    <span class="text-warning">★</span>
                                }
                            </h5>
                            <small class="text-muted">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                        </div>
                        <p class="card-text">@review.ReviewContent</p>
                        <small class="text-muted">By: @review.User?.UserName</small>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No reviews yet.</p>
        }
    </div>
